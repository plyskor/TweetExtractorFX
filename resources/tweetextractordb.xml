<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>
    <session-factory>
 
        <!-- Connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://10.2.0.1/te_dev01</property>
        <property name="hibernate.default_schema">te_dev01</property>
        <property name="hibernate.connection.username">te_adm</property>
        <property name="hibernate.connection.password"></property>
 
        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
 
        <!-- Print executed SQL to stdout -->
        <property name="show_sql">true</property>
 
        <!-- Drop and re-create all database on startup -->
        <property name="hibernate.hbm2ddl.auto">update</property>
 
        <!-- Annotated entity classes -->
         <mapping class="es.uam.eps.tweetextractorfx.model.User"/>
         <mapping class="es.uam.eps.tweetextractorfx.model.Credentials"/>
         <mapping class="es.uam.eps.tweetextractorfx.model.Extraction"/>
         <mapping class="es.uam.eps.tweetextractorfx.model.GeoLocation"/>
         <mapping class="es.uam.eps.tweetextractorfx.model.Tweet"/>         
         <mapping class="es.uam.eps.tweetextractorfx.model.filter.Filter"/>
         <mapping class="es.uam.eps.tweetextractorfx.model.filter.impl.FilterContains"/>
         <mapping class="es.uam.eps.tweetextractorfx.model.filter.impl.FilterContainsExact"/>
         <mapping class="es.uam.eps.tweetextractorfx.model.filter.impl.FilterFrom"/>
         <mapping class="es.uam.eps.tweetextractorfx.model.filter.impl.FilterHashtag"/>
         <mapping class="es.uam.eps.tweetextractorfx.model.filter.impl.FilterList"/>
         <mapping class="es.uam.eps.tweetextractorfx.model.filter.impl.FilterMention"/>
         <mapping class="es.uam.eps.tweetextractorfx.model.filter.impl.FilterNot"/>
         
         
        
    </session-factory>
    
</hibernate-configuration>
